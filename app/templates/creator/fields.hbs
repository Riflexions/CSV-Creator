<form class="form-horizontal">
    <br>
    <div class="form-group">
        <label for="name" class="col-sm-2 control-label">Name</label>
        <div class="col-sm-5">
            <input type="text" class="form-control" id=name placeholder="Enter your Name">
        </div>
    </div>
    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label">Age</label>
        <div class="col-sm-5">
            <input type="password" class="form-control" id="inputPassword3" placeholder="Password">
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-4 control-label" for="save"></label>
        <div class="col-md-4">
            <button id="save" name="save" class="btn btn-primary col-md-4">Save</button>
        </div>
    </div>


    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
        <div class="form-group input-group">
            <div class="fixed-1">
                <button class="btn btn-default btn-hover" style="border-radius: 50%;" ng-click="addDynamically()" title="Add Question"><i class="fa fa-plus"></i></button>
            </div>
            <br>
            <div class="fixed-2">
                <button class="btn btn-link" style="border-radius: 50%;" ng-show="showDropdown" ng-click="addEl('TEXT')" title="Add Question"><i class="fa fa-text-width"></i></button>
            </div>
            <br>
            <div class="fixed-3">
                <button class="btn btn-link" style="border-radius: 50%;" ng-show="showDropdown" ng-click="addEl('MCQ1')" title="Add Question"><i class="fa fa-dot-circle-o"></i></button>
            </div>
            <br>
            <div class="fixed-4">
                <button class="btn btn-link" style="border-radius: 50%;" ng-show="showDropdown" ng-click="addEl('MCQN')" title="Add Question"><i class="fa fa-check-square-o"></i></button>
            </div>
            <br>
            <div class="fixed-5">
                <button class="btn btn-link" style="border-radius: 50%;" ng-show="showDropdown" ng-click="addEl('RATE')" title="Add Question"><i class="fa fa-star-half-o"></i></button>
            </div>
        </div>
    </div>


    <div class="input-group row" ng-repeat="elem in elements[0].text1">
        <div class="col-lg-10 col-md-10 col-sm-10 col-xs-10">
            <div>
                <h4>Please write a question below &amp; click on save.</h4>
                <div class="input-group col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <span class="input-group-addon"><i class="fa fa-question"></i></span>
                    <input type="text" class="form-control" ng-model="elem.question" placeholder="Enter the question here.">
                </div>
            </div>
            <br>
            <div>
                <input type="text" class="form-control" ng-model="answer" placeholder="Sorry, but you can't write here." disabled>
            </div>
            <br>
            <br>
        </div>
    </div>
</form>
